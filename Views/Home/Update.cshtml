@model FoodRegistration.Models.Item

<h2>Update Item</h2>


<form asp-action="Update">
    <input type="hidden" asp-for="ItemId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sertifikat"></label>
        <input asp-for="Sertifikat" class="form-control" />
        <span asp-validation-for="Sertifikat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Nutritional Information -->
    <h4>Nutritional Information</h4>
    
    <div class="form-group">
        <label asp-for="Energi">Calories (kcal)</label>
        <input asp-for="Energi" class="form-control" />
        <span asp-validation-for="Energi" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Carbohydrates">Carbohydrates (g)</label>
        <input asp-for="Carbohydrates" class="form-control" />
        <span asp-validation-for="Carbohydrates" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sugar">Sugar (g)</label>
        <input asp-for="Sugar" class="form-control" />
        <span asp-validation-for="Sugar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Protein">Protein (g)</label>
        <input asp-for="Protein" class="form-control" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fat">Fat (g)</label>
        <input asp-for="Fat" class="form-control" />
        <span asp-validation-for="Fat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Saturatedfat">Saturated Fat (g)</label>
        <input asp-for="Saturatedfat" class="form-control" />
        <span asp-validation-for="Saturatedfat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Unsaturatedfat">Unsaturated Fat (g)</label>
        <input asp-for="Unsaturatedfat" class="form-control" />
        <span asp-validation-for="Unsaturatedfat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fiber">Fiber (g)</label>
        <input asp-for="Fiber" class="form-control" />
        <span asp-validation-for="Fiber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salt">Salt (g)</label>
        <input asp-for="Salt" class="form-control" />
        <span asp-validation-for="Salt" class="text-danger"></span>
    </div>

    <!-- Product Information -->
    <h4>Product Information</h4>

    <div class="form-group">
        <label asp-for="Productinfo.CountryOfOrigin">Country of Origin</label>
        <input asp-for="Productinfo.CountryOfOrigin" class="form-control" />
        <span asp-validation-for="Productinfo.CountryOfOrigin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Productinfo.CountryOfProvenance">Country of Provenance</label>
        <input asp-for="Productinfo.CountryOfProvenance" class="form-control" />
        <span asp-validation-for="Productinfo.CountryOfProvenance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Productinfo.ItemNumber">Item Number</label>
        <input asp-for="Productinfo.ItemNumber" class="form-control" />
        <span asp-validation-for="Productinfo.ItemNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>