@model FoodRegistration.Models.Item

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this item?</p>

<div class="text-center my-5">
    <h1>@Model.Name</h1>
    <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid" />


<div>   
     <dl class="row">
        <dt class="col-sm-2">Item Id</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Sertifikat</dt>
        <dd class="col-sm-10">@Model.Sertifikat</dd>
       </dl>
</div>


<form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
    <input type="hidden" asp-for="ItemId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>