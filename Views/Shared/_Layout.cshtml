<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodRegistration</title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodRegistration.styles.css" asp-append-version="true" />
    
    <!-- Scripts (head section for dropdown functionality) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>

@if (ViewData["Title"]?.ToString() != "Login") //To remove navigation bar from login page
{
<header class="navbar navbar-expand-lg navbar-dark mb-4 p-3 shadow" style="background-color: #83B271;">
    @* <a class="navbar-brand" href="/">FoodRegistration</a> *@
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/logoHvit.ico" alt="Logo" class="logo mr-2" /> <!-- Logoen -->
        FOODTRACE
    </a>


    <!-- Hamburger Toggle Button for Mobile -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links (Visible in both large and small screens) -->
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Create">Create Item</a>
            </li>
         
            
         <!-- Logg ut i hamburger menyen, bare synlig på små skjermer -->
            <li class="nav-item d-lg-none">
                <a class="nav-link" href="/Account/Profile">Account</a>
            </li>
             <li class="nav-item d-lg-none">
                <a class="nav-link" href="/Account/Logout">Logg ut</a>
            </li>
        </ul> 
        
        <!-- Brukerikon og dropdown (bare synlig på store skjermer) -->
        <div class="dropdown ml-auto d-none d-lg-block">
            <img src="/images/UserLogo.png" class="dropdown-toggle user-icon" id="userMenuIcon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alt="User Icon" />
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenuIcon">
                <a class="dropdown-item" href="/Account/Profile">Account</a>
                <a class="dropdown-item" href="/Account/Logout">Logg ut</a>
            </div>
        </div>
    </div> 
</header>
}

<!-- Main content area with enough space at the bottom for the fixed footer -->
<div class="container" style="margin-bottom: 70px;"> 
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Footer (bunnbanneret) -->
<footer class="footer text-white">
    <div class="container text-center">
        &copy; 2024 - FoodRegistration | Kontakt oss: Telefon: 999 99 999 | E-post: <a href="mailto:vårbedrift@gmail.com" class="text-white">vårbedrift@gmail.com</a>
    </div>
</footer>

<!-- Additional local scripts -->
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>



